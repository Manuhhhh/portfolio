<section class="loader">
  <svg
    class="loader-logo"
    version="1.1"
    id="L3"
    xmlns="http://www.w3.org/2000/svg"
    xmlns-xlink="http://www.w3.org/1999/xlink"
    x="0px"
    y="0px"
    viewBox="0 0 100 100"
    enable-background="new 0 0 0 0"
    xml-space="preserve"
  >
    <title>Cargando...</title>
    <circle
      fill="none"
      stroke="#ff7f11ff"
      stroke-width="4"
      cx="50"
      cy="50"
      r="44"
      style={{ opacity: 0.5 }}></circle>
    <circle
      fill="#ee8325"
      stroke="#ee8325"
      stroke-width="3"
      cx="8"
      cy="54"
      r="6"
    >
      <animateTransform
        attributeName="transform"
        dur="2s"
        type="rotate"
        from="0 50 48"
        to="360 50 52"
        repeatCount="indefinite"></animateTransform>
    </circle>
  </svg>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    setTimeout(() => {
      document.querySelector(".loader").classList.add("loader-hide");
    }, 200);
  });
</script>

<style>
  .loader {
    bottom: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 2;
    background-color: #3f3d56;
    transition: transform 0.67s cubic-bezier(0.53, 0.2, 0.72, 0.96) 0.3s;
    box-shadow: 0px 10px 30px -5px rgba(0, 0, 0, 0.8);

    &::after {
      backdrop-filter: blur(10px) opacity(0.7);
      content: "";
      background-color: #3f3d56;
      mask: radial-gradient(ellipse at 50% 115%, transparent 65%, black 65%);
      position: fixed;
      bottom: -20%;
      height: 21%;
      width: 120%;
      transition: transform 1s cubic-bezier(0.53, 0.2, 0.72, 0.96) 0.3s;
    }

    &.loader-hide {
      transform: translateY(-120%);
    }
  }

  .loader-logo {
    align-self: center;
    height: 40%;
    width: 40%;
  }
</style>
