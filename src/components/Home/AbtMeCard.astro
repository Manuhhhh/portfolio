---
interface Props {
  route: string;
  title: string;
}

const { route, title } = Astro.props;
---

<div class="abtme-card-hitbox">
  <div class="abtme-card">
    <div class="abtme-logo">
      <img src={route} alt="Programming language logo" />
    </div>
    <div class="abtme-card-content"><p><b>{title}</b></p></div>
  </div>
</div>

<style>
  .abtme-card {
    transform: translateY(-10%);
    opacity: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: #cacaca;
    box-shadow: 0px 7px 25px -5px rgba(0, 0, 0, 0.8);
    width: 150px;
    height: 180px;
    border-radius: 0.3rem;
    gap: 10px;
    transition:
      opacity 0.4s ease-in 0.6s,
      transform 0.2s ease-in-out;

    .abtme-logo {
      display: flex;
      justify-content: center;
    }

    .abtme-card-content {
      display: flex;
      justify-content: center;
    }

    .abtme-card-content p b {
      color: black;
      font-weight: 400;
    }
  }

  .abtme-card-hitbox:hover {
    .abtme-card {
      transform: translateY(-5%);
    }
  }

  .abtme-card-anim {
    transform: translateY(0);
    opacity: 1;
  }
</style>
